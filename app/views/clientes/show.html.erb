<table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
                  <th> Placa </th>
                  <th> Marca </th>
                  <th> Modelo </th>
      </tr>
    </thead>

    <tbody>
    
      <%= content_tag_for(:tr, @cliente.veiculos.order(created_at: :desc), :class => "row-table") do |veiculo| %>
              
              <td><%= veiculo.placa %></td>
              <td><%= veiculo.marca %></td> 
              <td><%= veiculo.modelo %></td>
              <td><%= link_to 'Exibir', cliente_veiculo_path(@cliente, veiculo) %></td>
      <% end %>
      
    </tbody>
  </table>
