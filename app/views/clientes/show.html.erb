<div class="page-header">
 <div class="dropdown" style="float: right;">
  <%= link_to clientes_path, :class => "btn btn-default dropdown-toggle" do %>
    <span class="glyphicon glyphicon-arrow-left"></span>
    Voltar
  <% end %>
  <%= link_to edit_cliente_path(@cliente), :class => "btn btn-default dropdown-toggle" do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <%= link_to new_cliente_veiculo_path(@cliente), :class => "btn btn-default dropdown-toggle" do %>
    <span class="glyphicon glyphicon-plus"></span>
