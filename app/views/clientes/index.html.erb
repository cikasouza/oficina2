<p id="notice"><%= notice %></p>
<div class="page-header">
 <div class="dropdown" style="float: right;"> 
       <%= link_to listar_clientes_path(@cliente,  :format => 'pdf'), :class => 'btn btn-default dropdown-toggle hidden-print' do %> 
          <span class="glyphicon glyphicon-file"></span>
           Relatório Clientes
       <% end %>
   <%= link_to new_cliente_path, :class => "btn btn-default dropdown-toggle" do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Cliente
    <% end %>
 </div>
  <h1>Clientes</h1>
</div>


<%= search_form_for @q do |f| %>
  
  <%= f.label :nome %>
  <%= f.search_field :nome_cont %>

  <%= f.submit "Pesquisar", :class => "btn btn-default dropdown-toggle " %>
<% end %>
</br>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover"> 
    <thead>
      <tr>
            <th>Nome</th>
            <th>Cpf</th>
            <th>Rg</th>
            <th>Telefone</th>
            <th>Endereco</th>
            <th>Sexo</th>
	    <th>Foto</th> 	
     </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @clientes.order(:nome), :class => "row-table") do |cliente| %>
                <td><%= cliente.nome %></td>
                <td><%= cliente.cpf %></td>
                <td><%= cliente.rg %></td>
                <td><%= cliente.telefone %></td>
                <td><%= cliente.endereco %></td>
                <td><%= cliente.sexo %></td>
                <td><%= image_tag cliente.foto.url.to_s if cliente.foto.url.present? %></td>
                <td><%= link_to 'Exibir', cliente %></td>
                               
                         
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @clientes, previous_label: "Anterior", next_label: "Próxima"%>
<br/>

 
</div>


